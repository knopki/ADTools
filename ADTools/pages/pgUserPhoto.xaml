<Page x:Class="pgUserPhoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowHeight="300"
        WindowWidth="300"
        Background="#7F000000" 
        DataContext="{Binding Path=CurrentObject, RelativeSource={RelativeSource Self}}"
        >
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Image x:Name="imgPhoto" Source="{Binding thumbnailPhoto}" Grid.Column="1" Grid.Row="1" RenderOptions.BitmapScalingMode="HighQuality"/>
    </Grid>
</Page>
